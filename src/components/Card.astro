---
import GithubIcon from "~/assets/icons/github.svg";
import GotoIcon from "~/assets/icons/goto.svg";

export interface Props {
  github: string;
  deploy: string;
  title: string;
  description: string;
  technologies: string;
}

const { github, deploy, title, description, technologies } = Astro.props;
---

<li class="rounded-md p-4 w-full flex-col gap-2">
  <section class="flex gap-3">
    <a class="link" href={github} target="_blank">
      <img src={GithubIcon} alt="Link a GitHub" />
    </a>
    <a class="link" href={deploy} target="_blank">
      <img src={GotoIcon} alt="Link al despliegue" />
    </a>
  </section>
  <section class="info">
    <h2 class="font-bold text-2xl">{title}</h2>
    <p class="description text-lg">{description}</p>
  </section>
  <section class="footer">
    <h2 class="font-bold text-gray-600">Tecnologias utilizadas:</h2>
    <p class="technologies font-bold" title={technologies}>
      {technologies}
    </p>
  </section>
</li>

<style>
  li {
    background-color: var(--color-bg);
    display: flex;
    flex-direction: column;
    transition: all 350ms ease-in;
    box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.3);
  }

  li:hover {
    animation: rotate 1.2s linear infinite;
    background-color: transparent;
  }

  .link {
    transition: all 350ms ease-out;
  }

  .link img {
    height: 25px;
    width: 25px;
  }

  .link:hover {
    transition: all 250ms ease-in;
    transform: scale(1.1);
  }

  .info {
    height: 100px;
  }

  h2 {
    color: var(--color-blue);
  }

  .description {
    color: var(--color-dark);
    line-height: 1.2;
  }

  .technologies {
    color: var(--color-light-gray);
  }

  @keyframes rotate {
    0%,
    50%,
    100% {
      transform: rotate(0deg);
    }
    25% {
      transform: rotate(1deg);
    }
    75% {
      transform: rotate(-1deg);
    }
  }
</style>
